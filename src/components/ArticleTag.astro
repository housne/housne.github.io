---
import type { Article } from '../types'
import Hash from './icons/Hash.astro'

type Props = {
  tags: Article['data']['tags']
}

const { tags } = Astro.props

---

<div class="tags flex space-x-4">
  {
    tags.map((tag) => (
      <div class="flex items-center space-x-1">
        <Hash />
        <a href={`/tags/${tag}`} class="tag text-black dark:text-white">
          {tag}
        </a>
      </div>
    ))
  }
</div>
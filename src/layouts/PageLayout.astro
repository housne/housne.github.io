---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

type Props = {
	title?: string;
	description?: string;
	image?: string;
	frontmatter?: {
		title: string;
		description?: string;
		image?: string;
	};
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, image='/blog-placeholder-1.jpg', frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={frontmatter?.title || title} description={frontmatter?.description || description} image={image} />
	</head>
	<body class="text-gray-700 dark:bg-gray-900 dark:text-gray-300 antialiased">
		<Header />
		<main class="max-w-screen-sm px-4 pb-8 space-y-8 mx-auto">
			<h1 class="text-3xl mb-4">{frontmatter?.title || title}</h1>
			<div class="prose dark:prose-invert">
				<slot />
			</div>
		</main>
	</body>
</html>

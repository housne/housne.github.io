---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

type Props = {
	title?: string;
	description?: string;
	image?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, image='/blog-placeholder-1.jpg' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<body class="text-gray-700 dark:bg-gray-900 dark:text-gray-300 antialiased">
		<Header />
		<main class="max-w-screen-sm px-4 pb-8 space-y-8 mx-auto">
      <slot />
		</main>
		<!-- <Footer /> -->
	</body>
</html>
